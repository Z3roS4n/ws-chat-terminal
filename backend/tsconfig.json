{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "socket.io", "socket.io-client"],
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "verbatimModuleSyntax": false
  }
}
